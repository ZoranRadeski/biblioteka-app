@model IEnumerable<BibliotekaAPP.Models.Korisnici>

@{
    ViewBag.Title = "Index";
}
<body style="background-image:url(https://findingtimetowrite.files.wordpress.com/2016/06/houseontherockwisconsin.jpg)">

<h2 style="font-family:fantasy; color:white">Članovi</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="background-image:url(https://www.incimages.com/uploaded_files/image/970x450/getty_496612468_2000138820009280460_336567.jpg); border:solid ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojTelefona)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrojTelefona)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.KorisnikID }) |
            @Html.ActionLink("Details", "Details", new { id=item.KorisnikID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.KorisnikID })
        </td>
    </tr>
}

</table>

</body>
